<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rabiayel.healthylife_3.SetMudahaleEdilen">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_acil_mudahale"
        android:layout_width="368dp"
        android:layout_height="800dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:title="Yapılan Mudahale"
            app:titleTextColor="@color/white" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Hastanın T.C Numarası:"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_htc"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_marginTop="10dp"
                    android:text="Doktorun T.C Numarası:"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dtc"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Tarih: "
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_tarih"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:textSize="20dp"/>


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="Yapılan Mudahale: "
            android:textStyle="normal|bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_height="120dp"
            android:layout_width="350dp"
            android:id="@+id/editText_aciklama"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/gray"
            android:textColorHint="@color/gray"
            android:background="@color/whiteRed"
            android:inputType="textMultiLine" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_height="55dp"
                android:layout_width="150dp"
                android:id="@+id/button_kaydet"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"
                android:text="Kaydet"
                android:textStyle="normal|bold"
                android:textSize="15sp"
                android:elevation="8dp"
                android:background="@color/colorPrimaryDark" />
            <Button
                android:layout_height="55dp"
                android:layout_width="150dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/button_iptal"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:text="İptal"
                android:textStyle="normal|bold"
                android:textSize="15sp"
                android:elevation="8dp"
                android:background="@color/colorPrimaryDark" />
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
